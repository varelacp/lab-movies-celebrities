<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{movie.title}}"><br>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{movie.genre}}"><br>

  <label for="plot">Plot:</label>
  <textarea id="plot" name="plot">{{movie.plot}}</textarea><br>

  <label for="cast">Cast:</label>
<select id="cast" name="cast" multiple>
  {{#each celebrities}}
    {{#if (eq this._id ../movie.cast)}}
      <option value="{{this._id}}" selected>{{this.name}}</option>
    {{else}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/if}}
  {{/each}}
</select>


  <button type="submit">Save Changes</button>
</form>
